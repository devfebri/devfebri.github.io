            color: white;
        }


        .absolute {
            position: absolute;
            animation-name: show;
            animation-duration: 300ms;
            z-index: 1;
            padding-top: 25px;
        }

        .absolute>div>nav>a {
            color: white;
        }

        .absolute>div>nav>div>ul>.nav-item>.nav-link {
            font-weight: 600;
            border-radius: 5px;
            padding: 2px 5px;
            margin: 2px 5px;
            color: white;
        }

        .absolute>div>nav>div>ul>.nav-item>.nav-link:hover {
            background-color: white;
            color: black;
        }


        @keyframes show {
            from {
                transform: translateY(-100%);
            }

            to {
                transform: translateY(0);
            }
        }

        @keyframes show2 {
            from {
                opacity: 0;
                transform: translateY(-100%);
            }

